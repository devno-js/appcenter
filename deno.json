{
  "compilerOptions": {
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "tasks": {
    "build": "deno run --allow-env --allow-read --allow-write --allow-net scripts/build.ts",
    "dev": "deno run --allow-read --allow-net --watch main.ts",
    "start": "deno run --allow-read --allow-net main.ts"
  },
  "fmt": {
    "options": {
      "semiColons": false,
      "singleQuote": true
    }
  }
}
